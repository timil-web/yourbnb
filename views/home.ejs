<% layout("/layouts/boilerplate") %>

<div class="container-fluid hero-section">
  <div class="container py-5 text-center">
    <!-- Hero Section with improved typography -->
    <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeIn">
      Discover <span class="text-gradient">Beautiful Places</span> Around the World
    </h1>
    
    <p class="lead mb-3 fs-4 text-muted max-w-700 mx-auto">
      Join our community of travelers sharing their favorite destinations and hidden gems.
    </p>
    <% if (!currUser) { %>
    <div class="border rounded-3 col-4 offset-4 login-box p-4 homeLoginBox" >
      <!-- Improved CTA buttons with hover effects -->
      
      <div >
        <form action="/login" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label">username</label>
            <input 
              name="username" 
              id="username"
              placeholder="enter username" 
              type="text" class="form-control"
              required
            >
            <div class="invalid-feedback">
              Please enter a username.
            </div>
          </div>
          
          <div class="mb-3">
            <label for="password" class="form-label">password</label>
            <input 
              name="password" 
              id="password"
              placeholder="enter password" 
              type="password" class="form-control"
              required
            >
            <div class="invalid-feedback">
              Please enter a password.
            </div>
          </div>
          <button class="btn btn-success">Login</button>
        </form>
      </div>
      
      <div class="d-flex flex-column flex-md-row justify-content-center mt-1">
          <a href="/signup" class="btn btn-light btn-lg px-4 py-3 rounded-pill shadow-sm">
            <i class="bi bi-person-plus me-2"></i>Sign Up
          </a>
      </div>

      <div class="mt-2">
        <a href="/listings" class="text-decoration-none text-muted small">
          <i class="bi bi-arrow-right-circle me-1"></i>Continue as Guest
        </a>
      </div>
    </div>
    <% } %>
    
      <% if (currUser) { %> 
        <a href="/listings" class="btn btn-success btn-lg px-4 py-3 rounded-pill shadow-sm">
          <i class="bi bi-compass me-2"></i>Explore Listings
        </a>
        <a href="/logout" class="btn btn-outline-danger btn-lg px-4 py-3 rounded-pill">
          <i class="bi bi-box-arrow-left me-2"></i>Logout
        </a>
      <% } %>
  </div>
</div>
